<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_eat_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What you eat today?"
        android:paddingTop="16dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

<!--    TODO : 1. tambahkan untuk mengupload gambar menggunakan kamera/galeri-->
    <Button
        android:id="@+id/btn_upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:layout_below="@id/txt_eat_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@id/btn_upload_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/txt_nutrition_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Nutrition Track"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_view"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_nutri_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutri A:"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/txt_nutrition_track"
        android:layout_marginTop="16dp" />

    <ProgressBar
        android:id="@+id/progress_nutri_a"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nutrition_track"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/txt_nutri_a"
        android:layout_margin="20dp"
        style="?android:attr/progressBarStyleHorizontal" />

    <TextView
        android:id="@+id/txt_nutri_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutri B:"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/txt_nutri_a"
        android:layout_marginTop="16dp" />

    <ProgressBar
        android:id="@+id/progress_nutri_b"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_nutri_a"
        android:layout_toEndOf="@id/txt_nutri_a"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        style="?android:attr/progressBarStyleHorizontal" />

    <TextView
        android:id="@+id/txt_nutri_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutri C:"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/txt_nutri_b"
        android:layout_marginTop="16dp" />

    <ProgressBar
        android:id="@+id/progress_nutri_c"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_nutri_b"
        android:layout_toEndOf="@id/txt_nutri_a"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        style="?android:attr/progressBarStyleHorizontal" />

    <Button
        android:id="@+id/btn_recomendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recomendation Food"
        android:layout_margin="16dp"
        android:layout_below="@id/progress_nutri_c"/>
</RelativeLayout>